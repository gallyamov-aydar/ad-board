<div class="panel">
  <h3>Регистрация</h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, 'Электронная почта' %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :login, 'Логин'%><br />
      <%= f.text_field :login%>
    </div>

    <div class="field">
      <%= f.label :full_name, 'ФИО' %><br />
      <%= f.text_field :full_name%>
    </div>

    <div class="field">
      <%= f.label :birthday, 'Дата рождения' %><br />
      <%= f.date_field :birthday%>
    </div>

    <div class="field">
      <%= f.label :country, 'Страна' %><br />
      <%= f.text_field :country%>
    </div>

    <div class="field">
      <%= f.label :state, 'Регион' %><br />
      <%= f.text_field :state%>
    </div>

    <div class="field">
      <%= f.label :city, 'Город' %><br />
      <%= f.text_field :city%>
    </div>

    <div class="field">
      <%= f.label :zip, 'Индекс' %><br />
      <%= f.text_field :zip%>
    </div>

    <div class="field">
      <%= f.label :address, 'Адрес' %><br />
      <%= f.text_field :address%>
    </div>

    <div class="field">
      <%= f.label :password, 'Пароль' %>
      <% if @minimum_password_length %>
      <em>(минимум <%= @minimum_password_length %> символов)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'Повторите пароль' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "ОК" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>