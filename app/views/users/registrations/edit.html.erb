<div class="panel">
  <h3>Редактирование данных</h3>

  <div class="form-wrapper">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, 'Email'%>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :login, 'Логин' %>
      <%= f.text_field :login %>
    </div>

    <div class="field">
      <%= f.label :full_name, 'ФИО' %>
      <%= f.text_field :full_name%>
    </div>

    <div class="field">
      <%= f.label :birthday, 'Дата рождения' %>
      <%= f.date_field :birthday%>
    </div>

    <div class="field">
      <%= f.label :country, 'Страна' %>
      <%= f.text_field :country%>
    </div>

    <div class="field">
      <%= f.label :state, 'Регион' %>
      <%= f.text_field :state%>
    </div>

    <div class="field">
      <%= f.label :city, 'Город' %>
      <%= f.text_field :city%>
    </div>

    <div class="field">
      <%= f.label :zip, 'Индекс' %>
      <%= f.text_field :zip%>
    </div>

    <div class="field">
      <%= f.label :address, 'Адрес' %>
      <%= f.text_field :address%>
    </div>

    <div class="field">
      <%= f.label :password, 'Новый пароль' %>
      <% if @minimum_password_length %>
        <br />
        <em>Минимум <%= @minimum_password_length %> символов</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, 'Повторите пароль' %>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :current_password, 'Текущий пароль' %>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Изменить" %>
    </div>
  <% end %>

  </div>


  <h3>Удалить аккаунт</h3>

  <p><%= button_to "Удалить", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, class: "delete-btn" %></p> <br>

  <%= link_to "Назад", :back %>

</div>